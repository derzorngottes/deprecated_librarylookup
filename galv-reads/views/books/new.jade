extends ../layout

block content
  div.title-bar
    img(src= '/assets/book-icon2.png' height='50' width='50' class='t-bar' id='logo')
    h2(class='t-bar' id='header-text') Galvanize Reads

  div.sidebar
    div.authors-div
      p Authors
        p Book
    div.books-div
      p Books
        p Person

  div.container
    form(action="/books", method="POST")
    div
      label(for="book-title") Title:
      br
      input(type="text" name="book-title")

    div
      label(for="genre") Genre:
      br
      input(type="text" name="genre")

    div
      label(for="cover-url") Cover Image URL:
      br
      input(type="text" name="cover-url")

    div
      label(for="description") Description:
      br
      textarea(class='description')

    div
      label(for='authors-list') Authors:
      br
      select(name='authors-list' size='3' class='authors-list')
        option(name='author-1') author 1
      input(type='button' value='remove')
      br
      select(name='all-authors' class='authors-list')
        option(name='author-2') author-2

    div
      input(type="submit" value="Add Book")
      a(href="/books/") cancel

  div.footer
    p(id='footer-text') footer goes here
