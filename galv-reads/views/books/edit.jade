extends ../layout

block content
  div.sidebar
    div.authors-div
      p Authors
        p Book
    div.books-div
      p Books
        p Person

  div.container
    form(action="/books" + thisBook.id + '/?_method=PUT', method="POST")
    div
      label(for="book-title") Title:
      br
      input(type="text" name="book-title" value=thisBook.title)

    div
      label(for="genre") Genre:
      br
      input(type="text" name="genre" value=thisBook.genre)

    div
      label(for="cover-url") Cover Image URL:
      br
      input(type="text" name="cover-url" value=thisBook.coverurl)

    div
      label(for="description") Description:
      br
      textarea(class='description' value=thisBook.description)

    div
      label(for='authors-list') Authors:
      br
      select(name='authors-list' size='3' class='authors-list')
        option(name='author-1') thisBook.author
      input(type='button' value='remove')
      br
      select(name='all-authors' class='authors-list')
        option(name='author-2') author-2

    div
      input(type="submit" value="Update Book")
      a(href="/books/") cancel
