extends ../layout

block content
  div.title-bar
    img(src= '/assets/book-icon2.png' height='50' width='50' class='t-bar' id='logo')
    h2(class='t-bar' id='header-text') Galvanize Reads

  div.sidebar
    div.authors-div
      p Authors
        p Book
    div.books-div
      p Books
        p Person

  h1 title: #{thisBook.title}
  h1 genre: #{thisBook.genre}
  h1 authors: #{thisBook.authors}
  p description: #{thisBook.description}

  form(action="/edit", method="post")
    div
      a(href="/books/" + thisBook.id + "/edit") Edit

  form(action="/delete", method="post")
    div
      a(href="/books/" + thisBook.id + "/delete") Delete

  form(action="/", method="get")
    div
      a(href="/books/") Back

  div.footer
    p(id='footer-text') footer goes here
